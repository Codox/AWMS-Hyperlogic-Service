FROM node:16-alpine3.15 AS builder

WORKDIR /app

COPY package*.json ./

RUN npm ci --production

COPY . .

RUN npm run build

FROM node:16-alpine3.15

WORKDIR /app

COPY --from=build /app/package*.json ./
COPY --from=build /app/dist ./dist

RUN npm ci --production

EXPOSE 3000

CMD ["node", "dist/main"]
